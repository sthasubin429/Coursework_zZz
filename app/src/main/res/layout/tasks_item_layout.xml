<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:elevation="1dp"
        android:background="@drawable/task_holder">

        <LinearLayout
            android:id="@+id/task_head"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/task_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task title"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_weight="0.3"/>

            <TextView
                android:id="@+id/task_list_due_date"
                android:text="Due date"
                android:textSize="14dp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/creator_email"
            android:orientation="horizontal"
            android:layout_below="@+id/task_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/creator_header"
                android:text="Creator :"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"/>

            <TextView
                android:id="@+id/task_list_created_by"
                android:text="Creator email"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/creator_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/task_progress"
                android:text="Progress :"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"/>

            <TextView
                android:id="@+id/task_list_status"
                android:text="Progress status"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
